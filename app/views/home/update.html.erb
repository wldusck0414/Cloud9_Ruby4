<div class = "container" style="margin-top:50px">
    <form action="/home/edit/<%= @updated_info.id %>" enctype="multipart/form-data" method="post">
      <div class="form-group">
        <label for="InputTitle">제목</label>
        <input name="title" type="text" class="form-control" id="InputTitle" placeholder="<%= @updated_info.title %>">
        <small id="TitleHelp" class="form-text text-muted">글의 제목은 한 줄을 넘을 수 없습니다.</small>
      </div>
      <div class="form-group">
        <label for="Textarea">내용</label>
        <textarea name="content" class="form-control" id="Textarea" rows="3" placeholder="<%= @updated_info.content %>"></textarea>
      </div>
      <div class="form-group">
        <label for="InputFile">사진 첨부</label>
        <input name="picture" type="file" class="form-control-file" id="InputFile">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>